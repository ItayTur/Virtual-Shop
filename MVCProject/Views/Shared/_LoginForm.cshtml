@model MVCProject.Models.LoginSignModel

        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
        {
            <form action="Index">
                <div class="form-group">
                    <label for="username">User Name:</label>
                    @Html.TextBoxFor(m => m.LoginUser.Name, new { @class = "form-control", placeholder = "Enter User name", id = "username" })
                    @Html.ValidationMessageFor(m => m.LoginUser.Name)
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    @Html.TextBoxFor(m => m.LoginUser.Password, new { @class = "form-control ", placeholder = "Enter password", id = "pwd", Type = "password" })
                    @Html.ValidationMessageFor(m => m.LoginUser.Password)
                </div>
                <div class="form-group">
                    <input class="btn btn-default" style="float:left" type="submit" value="Login" />
                </div>

            </form>
        }
 









