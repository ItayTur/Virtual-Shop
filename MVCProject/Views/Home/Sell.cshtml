@model MVCProject.Models.LoginSignModel

@{
    ViewBag.Title = "Sell";
}

@if (!ViewBag.IsSold)
{
    using (Html.BeginForm("Sell", "Home", FormMethod.Post, new
    { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Product</h4>
            <hr />
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })


            <div class="form-group">
                @Html.LabelFor(model => model.SellingProduct.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SellingProduct.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SellingProduct.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SellingProduct.ShortDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SellingProduct.ShortDescription, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SellingProduct.ShortDescription, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SellingProduct.LongDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SellingProduct.LongDescription, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SellingProduct.LongDescription, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SellingProduct.Date, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SellingProduct.Date, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SellingProduct.Date, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SellingProduct.Price, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SellingProduct.Price, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SellingProduct.Price, "", new { @class = "text-danger" })
                </div>
            </div>

            @Html.DisplayNameFor(model => model.SellingProduct.Picture1)<input type="file" name="picture1" />
            @Html.DisplayNameFor(model => model.SellingProduct.Picture2)<input type="file" name="picture2" />
            @Html.DisplayNameFor(model => model.SellingProduct.Picture3)<input type="file" name="picture3" />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}
else
{
    <div class="col-md-4">
        <div class="panel panel-success">
            <div class="panel-heading"><h1>Success!</h1></div>
            <div class="panel-body">
                <button class="btn btn-lg" onclick="location.href='@Url.Action("Index","Home")'">Return to home</button>
            </div>
        </div>
    </div>
}


