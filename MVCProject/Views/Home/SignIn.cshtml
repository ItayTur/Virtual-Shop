                @Html.EditorFor(model => model.SignInUser.VerificationPassword, new { htmlAttributes = new { @class = "form-control", Type = "password" } })
                @Html.ValidationMessageFor(model => model.SignInUser.VerificationPassword, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sign" class="btn btn-default" />
            </div>
        </div>
    </div>
